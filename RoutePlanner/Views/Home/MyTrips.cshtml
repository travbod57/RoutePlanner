@{
    ViewBag.Title = "My Trips";
}
@section scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    <script src="~/Scripts/custom/ui-bootstrap-custom-tpls-0.14.3.min.js"></script>
    <script src="~/Scripts/custom/angular-thinkbackpacking.js"></script>
    <script src="~/Scripts/custom/shared/controllerFactory.js"></script>
    <script src="~/Scripts/custom/shared/serviceFactory.js"></script>
    <script src="~/Scripts/custom/shared/directives.js"></script>
    <script src="~/Scripts/custom/my-trips/myTripsApp.js"></script>
    <link href="~/Content/travel-tool.css" rel="stylesheet" />
}
<div id="application" ng-app="MyTrips" ng-controller="myTripsCtrl" class="container ng-cloak">
    <div class="row">
        <div class="col-md-12 trip-list">

            <div ng-if="MyTrips.length == 0">You have no trips</div>

            <ul>
                <li class="my-trip-listed-item" ng-repeat="trip in MyTrips" ng-include="'@Url.Content("~/angularjs-templates/my-trips/trip.html")'"></li>
            </ul>

            <button ng-controller="NewTripCtrl" class="btn btn-primary" ng-click="NewTrip()">New Trip</button>
        </div>
    </div>

    <script type="text/ng-template" id="deleteTripModalTemplate.html">
        <div class="modal-header">
            <h3 class="modal-title">Delete Trip</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this trip?</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="yes()">Yes</button>
            <button class="btn btn-warning" type="button" ng-click="no()">No</button>
        </div>
    </script>

</div>
