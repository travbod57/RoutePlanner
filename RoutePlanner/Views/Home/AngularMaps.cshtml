
@{
    ViewBag.Title = "AngularMaps";
}

<h2>AngularMaps</h2>

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-resource.min.js"></script>
<script src="~/Scripts/angular-route.min.js"></script>
<script src="~/Scripts/custom/ui-bootstrap-custom-tpls-0.14.1.min.js"></script>

<script type="text/javascript">

    var myApp = angular.module('myApp', ['ui.bootstrap']);
    myApp.controller('AppCtrl', function ($scope, $uibModal) {

        $scope.HelloMessage = "Hello world";

        $scope.OpenModal = function (size) {

            var modalInstance = $uibModal.open({
                animation: true,
                templateUrl: 'myModal.html',
                controller: 'myModalCtrl',
                backdrop: 'static',
                size: size,
                resolve: {
                    message: function () {
                        return "a message";
                    },
                    route: function () {
                        return $scope.route;
                    }
                }
            });
        }

    });

    // to do: change to $http service
    myApp.controller('myModalCtrl', function ($scope, $uibModalInstance, message) {

        $scope.message = message;

        $scope.ok = function () {
            $uibModalInstance.dismiss('cancel');
        };

        $scope.cancel = function () {
            $uibModalInstance.dismiss('cancel');
        };
    });

</script>

<div ng-app="myApp" ng-controller="AppCtrl">

    {{ HelloMessage }}
 

    <button class="btn btn-primary" ng-click="OpenModal('lg')">Open Modal</button>

    <script type="text/ng-template" id="myModal.html">
        <div class="modal-header">
            <h3 class="modal-title">Modal Title</h3>
        </div>
        <div class="modal-body">

            {{ message }}

        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Ok</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>

</div>


